<launch>

  <!-- Launch the robot's transforms -->
  <node pkg="omnibot_description" type="tf_broadcaster" name="tf_broadcaster" respawn="true"/>

  <!-- Launch the robot's kinematics and motor drivers -->
  <include file="$(find ax2850_nh)/ax2850_nh.launch" />
  
  <!-- Launch the UM7 driver -->
  <!-- <node pkg="um6" type="um7_driver" name="um7_driver" respawn="true"> -->
  <!--  <param name="port" type="string" value="/dev/serial/by-id/usb-*************"/> -->
	<!--	<param name="mag_updates" type="bool" value="false"/> -->
  <!-- </node> -->
  
  <!-- Launch the laser sensors -->
  <node pkg="LMS1xx" type="LMS100" name="front_laser" respawn="true">
		<param name="host" value="192.168.1.2"/>
		<param name="frame_id" value="front_laser"/>
	</node>

	<node pkg="LMS1xx" type="LMS100" name="rear_laser" respawn="true">
		<param name="host" value="192.168.1.3"/>
		<param name="frame_id" value="rear_laser"/>
	</node>
	
	<node pkg="topic_tools" type="relay" name="front_relay" args="/front_laser/scan scan"/>

	<node pkg="topic_tools" type="relay" name="rear_relay" args="/rear_laser/scan scan"/>

	<node pkg="map_server" type="map_server" name="map_server" args="/home/nick/maps/test.yaml"/>
	
	<node pkg="robot_pose_ekf" type="robot_pose_ekf" name="robot_pose_ekf" respawn="true" >
		<remap from="odom" to="/omnimaxbot/omni_odom"/>
		<remap from="imu_data" to="/imu/data"/>
		<rosparam file="$(find omnibot_2d_nav)/config/ekf_params.yaml" command="load"/>
		<remap from="/robot_pose_ekf/odom" to="odom"/>
	</node>
	
	<include file="$(find omnibot_2d_nav)/launch/amcl.launch">
	  <arg name="use_map_topic" value="true"/>
		<arg name="scan_topic" value="scan"/>
  </include> 

	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
		<remap from="odom" to="/omnimaxbot/omni_odom"/>
		<rosparam file="$(find omnibot_2d_nav)/config/costmap_common_params.yaml" command="load" ns="global_costmap"/>
		<rosparam file="$(find omnibot_2d_nav)/config/costmap_common_params.yaml" command="load" ns="local_costmap"/>
		<rosparam file="$(find omnibot_2d_nav)/config/local_costmap_params.yaml" command="load"/>
		<rosparam file="$(find omnibot_2d_nav)/config/global_costmap_params.yaml" command="load"/>
		<rosparam file="$(find omnibot_2d_nav)/config/base_local_planner_params.yaml" command="load"/>
	</node>

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find omnibot_2d_nav)/rviz/test.rviz" respawn="false"/>  
</launch>
